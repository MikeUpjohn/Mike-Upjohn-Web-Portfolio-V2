<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Mike Upjohn - Web Developer and Meteorologist | @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/mikecss")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" type="image/png" href="_includes/img/favicon.png" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->
</head>
<body class="@ViewBag.BodyClass">
    <div id="main">
        @Html.Action("_MainNavigation","Shared")
        @RenderBody()
    </div>
    @Html.Action("_MobileNavigation","Shared")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mikejs")
    <script async="" defer="" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD5Zcptt4A86lQQb8vNSnm1Kd-umkiGN98&amp;callback=initMap"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

